{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    // "emitDeclarationOnly": true,
    // "declarationMap": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowJs": true,
    // "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["tests/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
